{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/choplin/amux/schemas/config.schema.json",
  "title": "Amux Configuration",
  "description": "Configuration schema for Amux - Agent Multiplexer",
  "type": "object",
  "required": ["version", "agents"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration file version",
      "enum": ["1.0"]
    },
    "mcp": {
      "type": "object",
      "description": "MCP (Model Context Protocol) server configuration",
      "additionalProperties": false,
      "properties": {
        "transport": {
          "type": "object",
          "required": ["type"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["stdio", "http"],
              "description": "Transport type for MCP server"
            },
            "http": {
              "type": "object",
              "description": "HTTP transport configuration",
              "additionalProperties": false,
              "properties": {
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535,
                  "description": "Port number for HTTP server"
                },
                "auth": {
                  "type": "object",
                  "description": "Authentication configuration",
                  "additionalProperties": false,
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["none", "bearer", "basic"],
                      "description": "Authentication type"
                    },
                    "bearer": {
                      "type": "string",
                      "description": "Bearer token for authentication"
                    },
                    "basic": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Username for basic auth"
                        },
                        "password": {
                          "type": "string",
                          "description": "Password for basic auth"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "agents": {
      "type": "object",
      "description": "AI agent configurations",
      "patternProperties": {
        "^[a-zA-Z0-9][a-zA-Z0-9_-]*$": {
          "$ref": "#/$defs/agent"
        }
      },
      "additionalProperties": false
    },
    "tasks": {
      "type": "array",
      "description": "Task definitions - reusable command templates",
      "items": {
        "$ref": "#/$defs/task"
      }
    }
  },
  "$defs": {
    "agent": {
      "type": "object",
      "description": "AI agent configuration",
      "required": ["name", "runtime"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name for the agent",
          "minLength": 1
        },
        "runtime": {
          "type": "string",
          "description": "Runtime type to use (e.g., local, tmux)",
          "enum": ["local", "tmux"]
        },
        "description": {
          "type": "string",
          "description": "Optional description of the agent"
        },
        "environment": {
          "type": "object",
          "description": "Environment variables for the agent",
          "additionalProperties": {
            "type": "string"
          }
        },
        "workingDir": {
          "type": "string",
          "description": "Working directory for the agent"
        },
        "tags": {
          "type": "array",
          "description": "Tags for categorizing the agent",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "runtimeOptions": {
          "type": "object",
          "description": "Runtime-specific options"
        },
        "command": {
          "type": "array",
          "description": "Command to execute",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "task": {
      "type": "object",
      "description": "Task definition - a reusable command template",
      "required": ["name", "command"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique name for the task",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_-]*$"
        },
        "description": {
          "type": "string",
          "description": "Description of what the task does"
        },
        "command": {
          "type": "string",
          "description": "Command template to execute",
          "minLength": 1
        },
        "lifecycle": {
          "type": "string",
          "description": "Task lifecycle type",
          "enum": ["oneshot", "daemon"],
          "default": "oneshot"
        },
        "working_dir": {
          "type": "string",
          "description": "Working directory for the task"
        },
        "env": {
          "type": "object",
          "description": "Environment variables for the task",
          "additionalProperties": {
            "type": "string"
          }
        },
        "depends_on": {
          "type": "array",
          "description": "List of task names that must be running before this task",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "timeout": {
          "type": "string",
          "description": "Maximum duration for the task (only for oneshot)",
          "pattern": "^[0-9]+(ns|us|Âµs|ms|s|m|h)$"
        }
      }
    }
  }
}
